<h1 class="center-align">Profile</h1>

<div class="row">
	<div class="col s6">
		{{#if user.avatarUrl}}
			<img
				class="avatar responsive-img"
				src="/{{user.avatarUrl}}"
				alt="avatar-{{user.name}}"
			>
		{{else}}
			<p>No avatar</p>
		{{/if}}
	</div>
	<div class="col s6">
		<form action="/profile" method="post" enctype="multipart/form-data">
			<p>Your email: <strong>{{user.email}}</strong></p>

			<div class="input-field">
				<input id="name" name="name" type="text" class="validate" value='{{user.name}}' required>
				<label for="name">Your name</label>
				<span class="helper-text" data-error="Name can't be empty"></span>
			</div>

			<div class="file-field input-field">
				<div class="btn">
					<span>Avatar</span>
					<input type="file" name="avatar">
				</div>
				<div class="file-path-wrapper">
					<input class="file-path validate" type="text">
				</div>
			</div>

			<button type="submit" class="btn">Edit</button>

			<input type="hidden" name='_csrf' value={{csrf}}>
		</form>
	</div>
</div>