<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">
	<div class="input-field">
		<input id="title" name="title" type="text" class="validate" required value={{course.title}}>
		<label for="title">Course title</label>
		<span class="helper-text" data-error="Enter title"></span>
	</div>

	<div class="input-field">
		<input id="price" name="price" type="text" class="validate" min="1" required value={{course.price}}>
		<label for="price">Price</label>
		<span class="helper-text" data-error="Enter price"></span>
	</div>

	<div class="input-field">
		<input id="image" name="image" type="text" class="validate" required value={{course.image}}>
		<label for="image">Image URL</label>
		<span class="helper-text" data-error="Enter url"></span>
	</div>

	<input type="hidden" name='id' value={{course._id}}>
	<input type="hidden" name='_csrf' value={{csrf}}>

	<button type="submit" class="btn btn-primary">Edit</button>
</form>
<form action="/courses/remove" method="post">
	<input type="hidden" name="id" value={{course._id}}>
	<input type="hidden" name='_csrf' value={{csrf}}>
	<button class="btn red">Delete course</button>
</form>